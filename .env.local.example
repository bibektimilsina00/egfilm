# Local Development Environment Configuration

# Database - PostgreSQL (Docker)
DATABASE_URL=postgresql://movieuser:moviepass@localhost:5432/moviedb

# TMDb API (server-side only - NOT exposed to browser)
TMDB_API_KEY=your_tmdb_api_key_here

# Authentication
AUTH_SECRET=generate_with_openssl_rand_base64_32
AUTH_URL=http://localhost:8000

# PostgreSQL Configuration (used by Docker Compose)
POSTGRES_USER=movieuser
POSTGRES_PASSWORD=moviepass
POSTGRES_DB=moviedb
POSTGRES_PORT=5432

# App Configuration
NEXT_PUBLIC_APP_NAME=Egfilm

# Admin Configuration
NEXT_PUBLIC_ADMIN_EMAIL=admin@egfilm.com
NEXT_PUBLIC_APP_NAME=Egfilm
NEXT_PUBLIC_APP_URL=http://localhost:8000
